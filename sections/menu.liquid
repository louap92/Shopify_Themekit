<img src="{{ section.settings.logo | img_url: '1920x1080' }}">

<div class="topnav">
{% for link in linklists[section.settings.list_menu].links %}
    <a href="{{ link.url }}">{{ link.title }}</a>
{% endfor %}
</div>

<style>

.topnav {
  background-color: {{ section.settings.color }};
  overflow: hidden;
}

.topnav a {
  float: left;
  color: {{ section.settings.colortext }};
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.topnav a:hover {
  background-color: {{ section.settings.colorhover }};
  color: black;
}
</style>

{% schema %}
{
  "name": "Menu",
  "settings": [
    {
        "type": "link_list",
        "id": "list_menu",
        "label": "Menu Test",
        "default": "main-menu"
    },
    {
        "id": "color",
        "type": "color",
        "label": "Navbar",
        "default": "#333"
    },
    {
        "id": "colorhover",
        "type": "color",
        "label": "Hover",
        "default": "#ddd"
    },
    {
        "id": "colortext",
        "type": "color",
        "label": "Text",
        "default": "#f2f2f2"
    },
    {
        "type": "image_picker",
        "id": "logo",
        "label": "logo"
      }
  ]
,
  "presets": [
    {
      "name": "Menu",
      "category": "IIM"
    }
  ]
}
{% endschema %}

