<hr>
<div id="section-cta">
  <div class="container">
    <h3> {{ section.settings.text-box }} </h3>
    <a href="{{ section.settings.link }}" class="button" style="width:{{ section.settings.font_size }}px;">{{ section.settings.linktext }}</a>
  </div>
</div>
<hr>

<style>

.container {
    display: flex;
    align-items: center;
    flex-direction: column;
}

h3 {
    font-size: 50px;
}
.button {
  display: inline-block;
  text-align: center;
  padding: 0.85em 1.5em;
  font-size: 1.5em;
  cursor: pointer;
  text-decoration: none;
  color: #ffffff;
  background-color: {{ section.settings.color }};
  border: none;
  border-radius: 0.62em;
  box-shadow: 0 0.25em #999999; 
}

.button:hover {
  background-color: {{ section.settings.hover }};
}

</style>

{% schema %}
{
  "name": "Button",
  "settings": [
    {
      "id": "text-box",
      "type": "text",
      "label": "Heading",
      "default": "Title"
    },
    {
      "id": "link",
      "type": "url",
      "label": "Button link"
    },
    {
      "id": "linktext",
      "type": "text",
      "label": "Button text",
      "default": "Click here"
    },
    {
        "id": "color",
        "type":"color",
        "label": "color",
        "default": "#000"
    },
    {
        "id": "font_size",
        "type": "range",
        "min": 100,
        "max": 400,
        "step": 10,
        "unit": "px",
        "label": "Font size",
        "default": 180
    },
    {
        "id": "hover",
        "type":"color",
        "label": "hover",
        "default": "#000"
    }
  ]
  ,
  "presets": [
    {
      "name": "Button",
      "category": "Call To Action"
    }
  ]
}
{% endschema %}

